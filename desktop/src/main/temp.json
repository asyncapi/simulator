{
  "version": "0.0.1",
  "user-logs-on": {
    "game/server/{serverId}/events/player/{playerId}/connect": {
      "playerId": {
        "min": 0,
        "max": 2000
      },
      "serverId": {
        "min": 0,
        "max": 4
      }
    }
  },
  "user-gameLoop": {
    "loop": {
      "interval": 600,
      "cycles": 5,
      "game/server/{serverId}/events/player/{playerId}/hit": {
        "serverId": "1",
        "playerId": {
          "regex": "^[\\w\\d]{1,22}$"
        },
        "payload": {
          "crit": 125,
          "apDamage": 30
        }
      },
      "game/server/{serverId}/events/player/{playerId}/item/{itemId}/pickup": {
        "serverId": "1",
        "playerId": {
          "regex": "^[\\w\\d]{1,22}$"
        },
        "itemId": {
          "min": 0,
          "max": 4
        }
      },
      "game/server/{serverId}/events/player/{playerId}/chat": {
        "serverId": "1",
        "playerId": {
          "regex": "^[\\w\\d]{1,22}$"
        },
        "payload": "well played m8"
      }
    }
  },
  "scenario-SimpleGame": [
    "user-logs-on",
    "user-gameLoop"
  ]
}
